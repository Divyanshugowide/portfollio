/* project modal and controls */
.open-project {
    margin-top: 12px;
    padding: 8px 10px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.04);
    background: transparent;
    color: var(--muted);
    cursor: pointer
}
.open-project:hover {
    transform: translateY(-3px)
}
.modal {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1200
}
.modal.hide {
    display: none
}
.modal-backdrop {
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(2, 6, 23, 0.6), rgba(2, 6, 23, 0.75));
    backdrop-filter: blur(6px)
}
.modal-panel {
    position: relative;
    z-index: 3;
    width: min(880px, 94vw);
    border-radius: 12px;
    padding: 0;
    overflow: hidden
}
.modal-close {
    position: absolute;
    right: 12px;
    top: 12px;
    background: transparent;
    border: 0;
    color: #fff;
    font-size: 20px;
    cursor: pointer
}
.modal-content {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), transparent);
    padding: 28px;
    border-radius: 12px;
    color: #e6f7f6
}
.modal-content h3 {
    margin-top: 0
}
.modal-content {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.09), transparent);
    padding: 36px;
    border-radius: var(--card-radius);
    color: #e6f7f6;
    box-shadow: var(--shadow);
}
.modal-content h3 {
    margin-top: 0;
    font-size: 1.5rem;
    text-shadow: 0 2px 12px rgba(99, 102, 241, 0.18);
}

/* Skills */
.skill-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 12px
}
.skill {
    display: flex;
    flex-direction: column;
    gap: 8px
}
.skill label {
    font-weight: 600
}
.bar {
    height: 12px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 999px;
    overflow: hidden
}
.bar span {
    display: block;
    height: 100%;
    width: var(--pct, 70%);
    background: linear-gradient(90deg, var(--accent-1), var(--accent-2));
    border-radius: 999px;
    transition: width .9s cubic-bezier(.2, .9, .2, 1)
}

/* Contact */
.contact-grid {
    display: grid;
    grid-template-columns: 1fr 420px;
    gap: 20px;
    align-items: start
}
.contact-form {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), transparent);
    padding: 18px;
    border-radius: 12px
}
.contact-form label {
    display: block;
    margin-bottom: 12px
}
.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 10px;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.04);
    background: transparent;
    color: #e6f7f6
}
.form-row {
    display: flex;
    gap: 10px;
    justify-content: flex-end;
    margin-top: 8px
}
.footer {
    padding: 30px;
    text-align: center;
    color: var(--muted)
}
.footer {
    padding: 36px;
    text-align: center;
    color: var(--muted);
    background: var(--glass);
    border-radius: var(--card-radius);
    box-shadow: var(--shadow);
}

/* utility and interactions */
.hide {
    display: none
}
.reveal {
    opacity: 0;
    transform: translateY(10px);
    transition: opacity .6s ease, transform .6s ease
}
.reveal.active {
    opacity: 1;
    transform: none
}

/* small responsive */
@media (max-width:980px) {
    .about-grid {
        grid-template-columns: 1fr
    }
    
    .contact-grid {
        grid-template-columns: 1fr
    }
    
    .contact-form {
        order: 2
    }
}
@media (max-width:720px) {
    .card {
        height: auto;
        padding-bottom: 26px
    }
    
    .card__content {
        flex-direction: column;
        gap: 18px;
        align-items: flex-start;
    }
    
    .profile {
        width: 96px;
        height: 96px;
    }
    
    .hero-info {
        align-items: flex-start;
    }
    
    .name {
        font-size: 24px;
    }
    
    .links {
        display: none;
    }
    
    .menu-toggle {
        display: block;
    }
    
    .pc-media {
        height: 100px;
    }
}
