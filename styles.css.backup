}

/* Experience cards */
.cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 18px
}
.exp {
    background: linear-gradient(120deg, rgba(99, 102, 241, 0.08), rgba(255, 255, 255, 0.02));
    padding: 22px;
